doctype html
html(lang="en")
    head
        title= title
        link(rel="stylesheet", href= "/css/main.min.css", type="text/css")
        meta(name="viewport", content="width-device-width, initial-scale=1")
        meta(name="theme-color", content="#188bee")
        link(rel="stylesheet", href= "https://use.fontawesome.com/1b61713aa1.css", type="text/css")
        link(rel="icon", type="image/x-icon", href="/assets/favicon.png")
    body
        include sidebar.pug
        main
            div.topBar
                div.top
                    span.mainTitle
                        i.fa.fa-fw.fa-list
                        span Categories
            div.content
                ul.categoryList
                    each category in s.categories
                        li
                            a(href=constants.URL + "/app/category?c=" + category._id)
                                span.name= category.name
                                span.padding
                                if (category.pinned)
                                    span.pinned
                                        i.fa.fa-fw.fa-thumb-tack.fa-rotate-45
                                span.short= category.shortened
                                span.num-badge= category.words
                    li
                        a(href=constants.URL + "/app/category/new").addNew
                            span.name Add new
                            span.short +
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.0/external/jquery/jquery.js")
        script(src="/js/dropdown.js")
        script(src="/js/sidebar.js")
