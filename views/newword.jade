doctype html
html(lang="en")
    head
        title= title
        link(rel="stylesheet", href= "/css/main.min.css", type="text/css")
        meta(name="viewport", content="width-device-width, initial-scale=1")
        meta(name="theme-color", content="#188bee")
        link(rel="stylesheet", href= "https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css", type="text/css")
    body
        include sidebar.jade
        main
            div.topBar
                div.top
                    span.mainTitle 
                        i(class="fa fa-fw fa-plus")
                        span= maintitle 
            div.content
                //- h1= message
                form(action="/app/words/new", method="post").appForm
                    label(for="word") Word
                    input(type="text", name="word" required autofocus)
                    input(type="hidden", value= categoryID, name="categoryID")
                    input(type="hidden", value= categoryName, name="categoryName")
                    label(for="translations") Translation(s) - Separated by commas.
                    input(type="text", name="translations" required)
                    input(type="submit", value="Add new word").bgPrimary

        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-beta1/jquery.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.4/i18n/jquery-ui-i18n.js")
        script(src="/js/dropdown.js")
        script(src="/js/search.js")
        script(src="/js/sidebar.js")
