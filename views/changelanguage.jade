doctype html
html(lang="en")
    head
        title= title
        link(rel="stylesheet", href= "/css/main.min.css", type="text/css")
        meta(name="viewport", content="width-device-width, initial-scale=1")
        meta(name="theme-color", content="#188bee")
        link(rel="stylesheet", href= "https://use.fontawesome.com/1b61713aa1.css", type="text/css")
        link(rel="icon", type="image/x-icon", href="/assets/favicon.png")
    body
        include sidebar.jade
        main
            div.topBar
                div.top
                    span.mainTitle
                        i L
                        span Change Language
            div.content
                ul.categoryList
                    each lang in u.languages
                        li
                            if (lang.shortened == s.currentlanguage.shortened)
                                a(href="/phrasebook/app/changelanguage?langShort=" + lang.shortened).active
                                    img(class="languageIcon", src="//dcatcher.me/assets/" + lang.shortened + ".svg")
                                    span.languageName= lang.language
                            else
                                a(href="/phrasebook/app/changelanguage?langShort=" + lang.shortened)
                                    img(class="languageIcon", src="//dcatcher.me/assets/" + lang.shortened + ".svg")
                                    span.languageName= lang.language


        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.0/external/jquery/jquery.js")
        script(src="/js/dropdown.js")
        script(src="/js/search.js")
