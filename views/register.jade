doctype html
html(lang="en")
    head
        title= title
        meta(name="viewport", content="width-device-width, initial-scale=1")
        link(rel="stylesheet", href= "/css/main.min.css", type="text/css")
        link(rel="stylesheet", href= "https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css", type="text/css")
    body.registerPage
        // include sidebar.jade
        main
            div.loginBlock
                div.formTitle 
                    span Register
                form(class='loginForm', action='/register', method='post')
                    if error
                        div.errorMessage= error
                    else
                        
                    div.formInput
                        span.icon
                            i(class="fa fa-user fa-fw pad-lr")
                        span.input
                            input(type='text', placeholder='Username', name='username')
                    div.formInput
                        span.icon
                            i(class="fa fa-fw pad-lr") F
                        span.input
                            input(type='text', placeholder='Firstname', name='firstname')
                    div.formInput
                        span.icon
                            i(class="fa fa-fw pad-lr") L
                        span.input
                            input(type='text', placeholder='Lastname', name='lastname')
                    div.formInput
                        span.icon
                            i(class="fa fa-envelope fa-fw pad-lr")
                        span.input
                            input(type='text', placeholder='Email', name='email')
                    div.formInput
                        span.icon
                            i(class="fa fa-lock fa-fw pad-lr")
                        span.input
                            input(type='password', placeholder='Password', name='password')
                    div.formInput
                        span.icon
                            i(class="fa fa-lock fa-fw pad-lr")
                        span.input
                            input(type='password', placeholder='Confirm Password', name='confirmpassword')
                    input(type='submit', class='bgGreen', value="REGISTER")
            // h2 Hello world!
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-beta1/jquery.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.4/i18n/jquery-ui-i18n.js")
        script(src="/js/dropdown.js")
