doctype html
html(lang="en")
    head
        title= title
        meta(name="viewport", content="width-device-width, initial-scale=1")
        link(rel="stylesheet", href= "/css/main.min.css", type="text/css")
        link(rel="stylesheet", href= "https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css", type="text/css")
    body.loginPage
        // include sidebar.jade
        main
            div.loginBlock
                div.formTitle 
                    span Login
                form(class='loginForm', action='/login', method='post')
                    if error
                        div.errorMessage= error
                    else
                    
                    div.formInput
                        span.icon
                            i(class="fa fa-user fa-fw pad-lr")
                        span.inp
                            input(type='text', placeholder='Username', name='username')
                    div.formInput
                        span.icon
                            i(class="fa fa-lock fa-fw pad-lr")
                        span.inp
                            input(type='password', placeholder='Password', name='password')
                    input(type='submit', class='bgBlue', value="SIGN IN")
            // h2 Hello world!
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-beta1/jquery.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.4/i18n/jquery-ui-i18n.js")
        script(src="/js/dropdown.js")
