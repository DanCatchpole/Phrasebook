doctype html
html(lang="en")
    head
        title= title
        link(rel="stylesheet", href= "https://dcatcher.me/assetspb" + constants.URL + "/css/main.min.css", type="text/css")
        meta(name="viewport", content="width-device-width, initial-scale=1")
        meta(name="theme-color", content="#188bee")
        link(rel="stylesheet", href= "https://use.fontawesome.com/1b61713aa1.css", type="text/css")
        link(rel="icon", type="image/x-icon", href="/assets/favicon.png")
    body
        include sidebar.pug
        main
            div.topBar
                div.top
                    span.mainTitle
                        i(class="fa fa-fw fa-home")
                        span= maintitle
                        span.subtext= "Welcome back " + u.firstname +"."
            div.content
                if (w.length != 0)
                    h2 The last 10 words you added:
                    div.allWords
                        each val in w
                            div.wordBlock
                                span.lang= val.word
                                span.padding
                                span.english= val.translations
                                span.padding
                                span.category
                                    img(class="languageIcon", src="//dcatcher.me/assets/" + val.language + ".svg", alt= val.language)
                else
                    h2 You haven't added any words yet! Why not add some to a category on the left!
                    img(src="//dcatcher.me/assets/sidebar-arrow.svg", alt="Arrow to sidebar").sidebar-arrow

        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.0/external/jquery/jquery.js")
        script(src="https://dcatcher.me/assetspb" + constants.URL + "/js/dropdown.js")
        script(src="https://dcatcher.me/assetspb" + constants.URL + "/js/sidebar.js")
        script(src="https://dcatcher.me/assetspb" + constants.URL + "/js/comma.js")
